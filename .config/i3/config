# exec --no-startup-id xrandr --output DisplayPort-0 --auto --output eDP --off
exec --no-startup-id autorandr --cycle
exec --no-startup-id xinput set-prop "SYNA32B9:00 06CB:CE7D Touchpad" "libinput Tapping Enabled" 1
